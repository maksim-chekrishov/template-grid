- var columns = view.options.columns;

div(class=view.buildElementClass('header'), style= view.getElementStyle('header'))
    for col in columns
        div(class=view.buildElementClass('header-cell') + ' ' + view.buildColumnHeaderClasses(col),
            style=view.buildCellStyle(col) + ' ' + view.getElementStyle('header-cell'),
            data-datafield=col.dataField)
            div(class=view.buildElementClass('header-cell-content'),
                style=view.getElementStyle('header-cell-content'))=col.text
